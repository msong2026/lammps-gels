# 1) Initialization
dimension 3
atom_style sphere
comm_modify mode single vel yes
# periodic boundary conditions
boundary p p p

# 2) System definition
region simbox prism 0 14.6381 0 14.6381 0 14.6381 0 0 0 units box
create_box 2 simbox
# 22 nm particless
create_atoms 1 random 100 34134 NULL
# water molecules
create_atoms 2 random 100 12756 NULL
set type 1 diameter 2.2
set type 2 diameter 0.28
set type 1 density 2.35
set type 2 density 2.6

# 3) Settings
pair_style granular
pair_coeff * * hooke 10000 0 tangential linear_history 7000 0 0.1

# 4) Monitoring
thermo 10000
dump id all custom 10000 create.dump id x y z radius
log gel.init.log

# 5) Run
write_dump all atom dump-*.lammpstrj
timestep 0.0001
fix 1 all nve/sphere
# may need to change damping coefficient 1.88
# this is for particle type 1 only (scale type ratio)
fix 2 all viscous 1.88 scale 1 1.4
run 1000000

# 6) Save system
write_dump all atom dump-*.lammpstrj
write_data gel.init.data
